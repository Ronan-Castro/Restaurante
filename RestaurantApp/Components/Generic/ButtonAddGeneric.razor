<FluentStack HorizontalAlignment="HorizontalAlignment.End">
    <FluentAnchor Href="@Href" IconStart="@(new Icons.Regular.Size24.NoteAdd().WithColor(Color.Success))">
        @ChildContent
    </FluentAnchor>
</FluentStack>

@code {
    [Parameter]
    public string Href { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
